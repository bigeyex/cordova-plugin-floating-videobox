<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_video_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floating_video_border"
    android:padding="3dip">
    <SurfaceView
        android:id="@+id/video-container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/btn-video-toggle-fullscreen"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@drawable/icon_video_small_fullscreen"
        android:layout_gravity="right"
        android:layout_margin="7dip"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn-video-replay"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:background="@drawable/icon_video_replay"
        android:layout_gravity="center"
        android:visibility="gone"
        />
</FrameLayout>
